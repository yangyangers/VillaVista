@{
    ViewData["Title"] = "Services";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Our Services</h1>

    <div class="services-container">
        <div class="row">
            <div class="col-md-4">
                <div class="card-wrapper">
                    <div class="card shadow-sm border-0">
                        <img src="~/images/service1.jpg" class="card-img-top" alt="Facility Reservation">
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">Facility Reservation</h5>
                            <p class="card-text text-muted">Reserve community facilities for private events and gatherings.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card-wrapper">
                    <div class="card shadow-sm border-0">
                        <img src="~/images/service2.jpg" class="card-img-top" alt="Billing & Payments">
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">Billing & Payments</h5>
                            <p class="card-text text-muted">Easily manage and pay your dues through our secure online portal.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card-wrapper">
                    <div class="card shadow-sm border-0">
                        <img src="~/images/service3.jpg" class="card-img-top" alt="Security & Visitor Pass">
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">Security & Visitor Pass</h5>
                            <p class="card-text text-muted">Request visitor passes and register vehicles for added security.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>